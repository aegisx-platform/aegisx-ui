{
  "name": "e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/e2e/src",
  "targets": {
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "apps/e2e/playwright.config.ts"
      },
      "configurations": {
        "production": {
          "config": "apps/e2e/playwright.config.ts"
        }
      },
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"]
    },
    "e2e-ui": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "apps/e2e/playwright.config.ts",
        "ui": true
      }
    },
    "e2e-headed": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "apps/e2e/playwright.config.ts",
        "headed": true
      }
    },
    "e2e-debug": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "apps/e2e/playwright.config.ts",
        "debug": true
      }
    },
    "visual-update": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "apps/e2e/playwright.config.ts",
        "updateSnapshots": true,
        "project": "visual-regression"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/e2e/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": ["type:e2e"],
  "implicitDependencies": ["web", "api"]
}