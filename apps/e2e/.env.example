# E2E Testing Environment Configuration

# Base URL for testing (automatically set by Playwright config)
PLAYWRIGHT_BASE_URL=http://localhost:4200

# API Base URL
API_BASE_URL=http://localhost:3000

# Test Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aegisx_test

# Redis Configuration for testing
REDIS_URL=redis://localhost:6379

# JWT Secret for testing
JWT_SECRET=test-jwt-secret-for-e2e

# Test User Credentials (should match seed data)
TEST_ADMIN_EMAIL=admin@aegisx.com
TEST_ADMIN_PASSWORD=admin123
TEST_MANAGER_EMAIL=manager@aegisx.com
TEST_MANAGER_PASSWORD=manager123
TEST_USER_EMAIL=user@aegisx.com
TEST_USER_PASSWORD=user123

# Playwright Configuration
PLAYWRIGHT_WORKERS=1
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_RETRIES=2

# Visual Testing Configuration
VISUAL_THRESHOLD=0.2
VISUAL_MAX_DIFF_PIXELS=100

# Performance Testing Configuration
PERFORMANCE_TIMEOUT=10000
MAX_PAGE_LOAD_TIME=3000
MAX_API_RESPONSE_TIME=2000

# Accessibility Testing Configuration
A11Y_RULES_TO_SKIP=color-contrast-enhanced

# CI/CD Configuration
CI=false
GITHUB_ACTIONS=false

# Debug Configuration
DEBUG_MODE=false
VERBOSE_LOGS=false
SAVE_SCREENSHOTS=true
SAVE_VIDEOS=false

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_SLOW_MO=0

# Test Data Configuration
USE_MOCK_DATA=false
MOCK_API_DELAY=100

# Email Testing (if applicable)
TEST_EMAIL_PROVIDER=ethereal
TEST_EMAIL_USER=
TEST_EMAIL_PASSWORD=

# File Upload Testing
UPLOAD_TEST_FILES_PATH=./test-files
MAX_UPLOAD_SIZE=10MB

# Network Simulation
SIMULATE_SLOW_NETWORK=false
SLOW_NETWORK_DELAY=500

# Error Testing
SIMULATE_API_ERRORS=false
ERROR_RATE_PERCENTAGE=10

# Parallel Execution
MAX_PARALLEL_TESTS=4
TEST_SHARDS=4