# Feature Development Command Aliases
# Add to your shell profile (.bashrc, .zshrc, etc.)

# Main feature toolkit commands
alias ft='./scripts/feature-toolkit.sh'
alias feature='./scripts/feature-toolkit.sh'

# Quick shortcuts
alias fs='./scripts/feature-toolkit.sh start'           # fs password-change high
alias fstat='./scripts/feature-toolkit.sh status'      # fstat password-change  
alias fprog='./scripts/feature-toolkit.sh progress'    # fprog password-change "task done" 75
alias fconf='./scripts/feature-toolkit.sh conflicts'   # fconf password-change
alias fcomp='./scripts/feature-toolkit.sh complete'    # fcomp password-change
alias fdash='./scripts/feature-toolkit.sh dashboard'   # fdash

# Super quick shortcuts
alias fstart='./scripts/feature-toolkit.sh start'
alias fstatus='./scripts/feature-toolkit.sh status'
alias fprogress='./scripts/feature-toolkit.sh progress'
alias fconflicts='./scripts/feature-toolkit.sh conflicts'
alias fcomplete='./scripts/feature-toolkit.sh complete'
alias fdashboard='./scripts/feature-toolkit.sh dashboard'
alias fhelp='./scripts/feature-toolkit.sh help'

# Navigation shortcuts
alias fdir='cd docs/features'                           # Go to features directory
alias freg='code docs/features/RESOURCE_REGISTRY.md'   # Edit resource registry
alias fread='code docs/features/README.md'             # Edit dashboard

# Git shortcuts for features
alias fgit='git checkout develop && git pull origin develop'  # Switch to develop
alias fbranch='git checkout -b feature/'                     # Create feature branch

echo "üõ†Ô∏è Feature Development Aliases Loaded!"
echo "Usage examples:"
echo "  fs password-change high     # Start new feature"
echo "  fstat password-change       # Check status"  
echo "  fprog password-change 'API done' 75  # Update progress"
echo "  fdash                       # Show dashboard"
echo "  fhelp                       # Show all commands"