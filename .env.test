# AegisX Platform Test Environment Configuration

# Application
NODE_ENV=test
API_VERSION=v1
PORT=3334
API_PREFIX=/api

# Test Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=aegisx_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres

# Alternative naming for Docker Compose compatibility
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=aegisx_test
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Postgres Configuration for Test Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aegisx_test
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration (for testing - can use mock)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# JWT Configuration (Test secrets)
JWT_SECRET=test-jwt-secret-key-for-testing-only-not-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration (Test secrets)
SESSION_SECRET=test-session-secret-key-for-testing-only-not-production

# Frontend URLs (Test environment)
WEB_URL=http://localhost:4200
ADMIN_URL=http://localhost:4201

# File Upload Configuration (Test environment)
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=./test-uploads
TEST_UPLOAD_PATH=./apps/api/src/__tests__/integration/test-assets

# Logging Configuration (Reduced for testing)
LOG_LEVEL=error
LOG_FILE=./logs/test.log

# Security Configuration (Reduced for faster tests)
BCRYPT_ROUNDS=4
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
CORS_ORIGIN=http://localhost:4200,http://localhost:4201

# Test-specific Configuration
DROP_TEST_DB=false
DISABLE_AUTH_RATE_LIMITING=true
DISABLE_LOGGING=true
PARALLEL_TESTS=true
TEST_TIMEOUT=30000

# Mock Services Configuration
MOCK_EMAIL_SERVICE=true
MOCK_FILE_STORAGE=true
MOCK_REDIS=false

# Test Coverage Configuration
COVERAGE_THRESHOLD_STATEMENTS=80
COVERAGE_THRESHOLD_BRANCHES=75
COVERAGE_THRESHOLD_FUNCTIONS=80
COVERAGE_THRESHOLD_LINES=80

# Database Connection Pool (Optimized for tests)
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=1000

# Jest Configuration
JEST_WORKERS=2
JEST_MAX_WORKERS=4

# Docker Test Configuration
TEST_DOCKER_COMPOSE_FILE=docker-compose.test.yml
TEST_CONTAINER_PREFIX=aegisx_test