# Monitoring and Logging Configuration

# Logging Configuration
LOG_LEVEL=info
LOG_DIRECTORY=logs
LOG_HEADERS=false
STORE_CLIENT_ERRORS=true
STORE_PERFORMANCE_METRICS=true
STORE_USER_ACTIONS=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_RESOURCE_MONITORING=true
METRICS_PREFIX=aegisx_api_

# Health Checks
ENABLE_DETAILED_HEALTH_CHECKS=true
DATABASE_HEALTH_TIMEOUT=5000
REDIS_HEALTH_TIMEOUT=3000
MEMORY_THRESHOLD=85
DISK_THRESHOLD=90

# Client Error Tracking
ENABLE_CLIENT_ERROR_LOGGING=true
CLIENT_ERROR_RATE_LIMIT=100
CLIENT_ERROR_RATE_WINDOW=60000

# Monitoring Endpoints
METRICS_ENDPOINT_ENABLED=true
HEALTH_ENDPOINT_ENABLED=true

# External Monitoring Services (Optional)
# Uncomment and configure if using external monitoring services

# Prometheus
# PROMETHEUS_ENABLED=false
# PROMETHEUS_ENDPOINT=/metrics

# DataDog
# DATADOG_ENABLED=false
# DATADOG_API_KEY=your_api_key
# DATADOG_SERVICE_NAME=aegisx-api

# New Relic
# NEWRELIC_ENABLED=false
# NEWRELIC_LICENSE_KEY=your_license_key
# NEWRELIC_APP_NAME=AegisX API

# Sentry
# SENTRY_ENABLED=false
# SENTRY_DSN=your_sentry_dsn
# SENTRY_ENVIRONMENT=production

# Alert Configuration
ALERT_ON_HIGH_ERROR_RATE=true
ERROR_RATE_THRESHOLD=10
ALERT_ON_SLOW_RESPONSES=true
SLOW_RESPONSE_THRESHOLD=3000
ALERT_ON_MEMORY_USAGE=true
MEMORY_ALERT_THRESHOLD=90

# Retention Policies
LOG_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=7
ERROR_LOG_RETENTION_DAYS=90