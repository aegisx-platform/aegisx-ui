# AegisX production Environment Configuration
NODE_ENV=production
API_VERSION=v1

# Server Configuration
API_PORT=3333
WEB_PORT=4200
ADMIN_PORT=4201

# SSL/HTTPS Configuration
HTTPS_ENABLED=true
SSL_CERT_PATH=/etc/ssl/aegisx/certs/yourdomain.com.crt
SSL_KEY_PATH=/etc/ssl/aegisx/private/yourdomain.com.key
FORCE_HTTPS=true

# Public URLs
API_BASE_URL=https://yourdomain.com/api
WEB_BASE_URL=https://yourdomain.com
ADMIN_BASE_URL=https://admin.yourdomain.com

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_DB=aegisx_production
POSTGRES_USER=aegisx_user
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict
CSRF_PROTECTION=true

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_DEBUG=false
ENABLE_CORS_DEBUG=false

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

