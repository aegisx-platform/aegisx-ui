# AegisX Platform Environment Configuration

# Application
NODE_ENV=development
API_VERSION=v1
PORT=3333
API_PREFIX=/api
API_BASE_URL=http://localhost:4200

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=aegisx_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Alternative naming for Docker Compose compatibility
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aegisx_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Frontend URLs
WEB_URL=http://localhost:4200
ADMIN_URL=http://localhost:4201

# Docker Ports Configuration
API_PORT=3000
WEB_PORT=80
ADMIN_PORT=8080

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@aegisx.local
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@aegisx.local

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:4200,http://localhost:4201

# Docker Registry Configuration
REGISTRY=ghcr.io
IMAGE_TAG=latest

# Production Configuration (copy to .env.production)
# NODE_ENV=production
# POSTGRES_PASSWORD=your-strong-production-password
# JWT_SECRET=your-production-jwt-secret-256-bit-key-here
# REDIS_PASSWORD=your-redis-production-password
# SESSION_SECRET=your-production-session-secret-256-bit-key