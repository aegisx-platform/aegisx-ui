# AegisX Platform - Production Environment

# Application
NODE_ENV=production
API_VERSION=v1
PORT=3333
API_PREFIX=/api

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=aegisx_db
DATABASE_USER=postgres
DATABASE_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Docker Compose compatibility
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=aegisx_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=${SESSION_SECRET}

# Frontend URLs
WEB_URL=https://app.aegisx.com
ADMIN_URL=https://admin.aegisx.com

# Docker Ports Configuration
API_PORT=3000
WEB_PORT=80
ADMIN_PORT=8080

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=noreply@aegisx.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=./logs/production.log

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://app.aegisx.com,https://admin.aegisx.com

# Docker Registry Configuration
REGISTRY=ghcr.io
IMAGE_TAG=latest